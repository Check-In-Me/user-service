{
  "compilerOptions": {
    "target": "ES2020",                      // Modern JavaScript features
    "module": "ES2020",                      // Use ES modules
    "moduleResolution": "bundler",           // Modern resolver for Node + TS + ESM
    "rootDir": "src",                         // Source files folder
    "outDir": "dist",                         // Compiled JS output
    "esModuleInterop": true,                  // Default imports from CommonJS modules
    "resolveJsonModule": true,                // Import JSON files
    "strict": true,                           // Enable strict type-checking
    "skipLibCheck": true,                     // Skip type checking of node_modules
    "forceConsistentCasingInFileNames": true, // Prevent file name casing issues
    "verbatimModuleSyntax": false,            // Avoid ESM import errors
    "sourceMap": true                          // Optional: generate source maps for debugging
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
